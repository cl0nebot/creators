<div class="ui stackable grid">
  <div class="row">
	<div class="nine wide stretched column">
        <div class="ui basic segment">
          <div class="ui video" data-source="youtube" data-id="<%= @motion_graphic.vidurl %>" data-image="<%= @motion_graphic.thumburl_url.to_s %>" style="margin-bottom: 32px;"></div>
          <%= link_to motion_graphics_path, :class => 'ui secondary labeled icon button', :style => 'position: absolute; left: 14px; bottom: 0px;' do |button| %>
            <i class="left arrow icon"></i>
            Back
          <% end %>
          <div class="ui labeled icon buttons" style="position: absolute; right: 14px; bottom: 0px;">
            <%= link_to [@motion_graphic, :order_items], :class => "ui blue button" do |button| %>
                <i class="options icon"></i>
                Presets
            <% end %>
            <%= link_to [:new, @motion_graphic, :order_item], class: 'ui positive button' do | lnk | %>
              <i class="options icon"></i>
              New Preset
            <% end %>
          </div>
        </div>
	</div>
	<div class="seven wide stretched column">
      <div class="ui raised segment">
        <div class="ui top big inverted grey ribbon label">
          <%= @motion_graphic.title %>, by <%= @motion_graphic.user.nickname %>
        </div>
        <h4 class="ui horizontal divider header">
          Description
        </h4>
        <div class="ui basic segment">
          <p><%= @motion_graphic.get_content_safe %></p>
        </div>
        <h4 class="ui horizontal divider header">
          Preset Fields
        </h4>
        <div class="ui centered basic segment">
          <%= render 'customizable_fields', :cust => @motion_graphic.custom_fields %>
        </div>
        <% if can? :manage, @motion_graphic %>
          <div class="ui tiny icon buttons" style="position: absolute; top: 12px; right: 12px;">
            <%= link_to [:edit, @motion_graphic], class: 'ui orange icon button' do |lnk| %>
              <i class="edit icon"></i>
            <% end %>
            <%= link_to @motion_graphic, method: :delete, data: { confirm: 'Are you sure you want to delete this motion graphic?' }, class: 'ui red icon button' do |lnk| %>
              <i class="trash icon"></i>
            <% end %>
          </div>
        <% end %>
      </div>
	</div>
  </div>
</div>