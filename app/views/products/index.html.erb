<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Preview</th>
      <th>Price</th>
      <th>Description</th>
      <th>Custom</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product_typed| %>
    <% product = product_typed.becomes(Product) %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.preview %></td>
        <td><%= product.price %></td>
        <td><%= product.description %></td>
        <td><%= product.custom %></td>
        <td><%= product.status %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

