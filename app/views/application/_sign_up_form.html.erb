<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'ui form'}) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <label>Your Email Address</label>
    <div class="ui icon input">
      <%= f.email_field :email, autofocus: true, required: true %>
      <i class="user icon"></i>
    </div>
  </div>

  <div class="two fields">
    <div class="field">
      <label>Pick a Password</label>
      <div class="ui icon input">
        <%= f.password_field :password, autocomplete: "off", required: true  %>
        <i class="lock icon"></i>
      </div>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
    </div>
    <div class="field">
      <label>Confirm your Password</label>
      <div class="ui icon input">
        <%= f.password_field :password_confirmation, autocomplete: "off", required: true %>
        <i class="lock icon"></i>
      </div>
    </div>
  </div>
  <% if Rails.env.development? %>
    <div class="hidden inline field">
      <label>Referrer id:</label>
      <%= f.text_field :refid, value: request.env['affiliate.tag'], disabled: 'disabled'  %>
      (dev only)
    </div>
  <% else %>
    <%= f.hidden_field :refid, value: request.env['affiliate.tag'], disabled: 'disabled'  %>
  <% end %>
  <% if 1 == 2 %>
  <div class="inline field">
    <div class="ui checkbox">
      <div class="ui toggle checkbox">
        <%= f.check_box :recruiter %>
        <label>Sign up as a <b>Recruiter</b></label>
      </div>
    </div>
  </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Sign up", class: 'ui green button' %>
  </div>
<% end %>