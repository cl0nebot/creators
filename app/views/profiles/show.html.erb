<div class="ui container">

  <h1 class="ui centered dividing header"><%= @title %></h1>

  <%= render 'profile_card', :card_profile => @profile, :hyperlink => false %>
  
<% if @profile.user_id == current_user.id %>
  <center>
  	<%= link_to edit_user_registration_path, class: "item" do |lnk| %>
			<i class="privacy icon"></i>
			<label>Change Password or Email</label>
		<% end %>
	</center>
<% end %>

</div>
