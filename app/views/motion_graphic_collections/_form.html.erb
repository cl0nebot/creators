<%= form_for(@motion_graphic_collection, html: {multipart: true, class: 'ui form'}) do |f| %>
	<% if @motion_graphic_collection.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@motion_graphic_collection.errors.count, "error") %> prohibited this motion_graphic_collection from being saved:</h2>

			<ul>
				<% @motion_graphic_collection.errors.full_messages.each do |message| %>
					<li>
						<%= message %>
					</li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<div class="two fields">
		<div class="field">
			<label>Name</label>
			<%= f.text_field :name, required: true %>
		</div>
		<div class="field">
			<label>Tag List (Tags separated by commas)</label>
			<%= f.text_field :tag_list,  :id => "tags", :value => @motion_graphic_collection.tags.map(&:name).join(',') %>
		</div>
	</div>
	<div class="field">
			<label>Preview Image</label>
			<%= f.file_field :preview %>
	</div>
	<div class="field">
		<label>Description</label>
		<%= f.text_area :description %>
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>