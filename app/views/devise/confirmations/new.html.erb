
  <div class="ui one column center aligned stackable page grid">
    <div class="column twelve wide">
      <%= image_tag 'logoonly-512-matte-white.png', class: 'ui centered small image'%>
      <h2>Resend confirmation instructions</h2>

      <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: 'ui form' }) do |f| %>
      <%= devise_error_messages! %>

      <div class="required field">
        <label>Email Address</label>
        <div class="ui icon input">
          <%= f.email_field :email, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %> 
          <i class="user icon"></i>
        </div>
      </div>

  <div class="actions">
    <%= f.submit "Resend confirmation instructions", class: 'ui positive button' %>
  </div>
<% end %>
<div class="ui divider"></div>
<%= render "devise/shared/links" %>
</div>
</div>
