<h1>My Work Requests</h1>

<table class="ui blue selectable table">
  <thead>
    <tr>
      <th>User</th>
      <th>Channel</th>
      <th>Type</th>
      <th>Status</th>
        
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.user.profile.nickname %></td>
        <td><%= request.channel.name %></td>
        <td><%= request.reqtype %></td>
        <td><%= request.status %></td>
        
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Request', new_request_path %>

 